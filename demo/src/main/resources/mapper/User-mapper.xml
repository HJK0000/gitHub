<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.demo.dao.IUserDao">
  <select id="getUserList" resultType="com.example.demo.dto.User">
    SELECT * FROM USER_tbl
  </select>
  <select id="getUser">
  	SELECT * FROM USER_tbl WHERE uno = #{dto.uno}
  </select>
  
  <insert id="saveUser">
  	INSERT INTO USER_tbl (id, pw) VALUES (#{id}, #{pw})
  </insert>
  
  <delete id="deleteUser">
  	DELETE FROM USER_tbl WHERE uno = #{uno}
  </delete>
</mapper>